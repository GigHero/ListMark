<form action="<%= formAction %>" method="post">
  <div class="form-group">
    <label for="idLista">Selecione a Lista de compra:</label>
      <select class="form-control" id="idLista" name="idLista">
        <% for (let lista of listas) { %>
          <option value="<%= lista.id %>"><%= lista.nome %></option>
        <% } %>
      </select>
  </div>
  <div class="form-group">
    <label for="idMercado">Selecione o Mercado:</label>
      <select class="form-control" id="idMercado" name="idMercado">
        <% for (let mercado of mercados) { %>
          <option value="<%= mercado.id %>"><%= mercado.nome %></option>
        <% } %>
      </select>
  </div>
  <div class="form-group">
    <label for="sel3">Selecione o Item:</label>
      <select class="form-control" id="idItem" name="idItem">
        <% for (let item of itens) { %>
          <option value="<%= item.id %>"><%= item.nome %></option>
        <% } %>
        </select>
  </div>
  <div class="form-group">
    <label for="preco">Pre√ßo:</label>
    <input type="text" name="preco" id="preco" class="form-control" value="<%= compra.preco %>" />
  </div>
  <div class="form-group">
    <label for="quantidade">Quantidade:</label>
    <input type="text" name="quantidade" id="quantidade" class="form-control" value="<%= compra.quantidade %>" />
  </div>
  <button class="btn btn-primary" type="submit">Salvar item</button>
</form>